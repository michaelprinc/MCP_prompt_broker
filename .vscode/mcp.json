{
    // Updated: 2026-01-01 - Fixed paths after directory restructure
    "servers": {
        "mcp-prompt-broker": {
            "type": "stdio",
            "command": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": ["-m", "mcp_prompt_broker"],
            "env": {}
        },
        "delegated-task-runner": {
            "type": "stdio",
            "command": "${workspaceFolder}/.venv/Scripts/python.exe",
            "args": ["-m", "mcp_codex_orchestrator"],
            "env": {
                "DOCKER_COMPOSE_PATH": "${workspaceFolder}/packages/mcp-codex-orchestrator/docker",
                "WORKSPACE_PATH": "${workspaceFolder}/packages/mcp-codex-orchestrator/workspace",
                "RUNS_PATH": "${workspaceFolder}/packages/mcp-codex-orchestrator/runs",
                "CODEX_AUTH_PATH": "${env:USERPROFILE}/.codex"
            }
        }
    }
}
