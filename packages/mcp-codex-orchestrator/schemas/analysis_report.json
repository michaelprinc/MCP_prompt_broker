{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Codex Analysis Report Schema",
  "description": "Output schema for analysis and report generation tasks",
  "type": "object",
  "properties": {
    "summary": {
      "type": "string",
      "description": "Executive summary of the analysis"
    },
    "findings": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "category": {"type": "string"},
          "severity": {"type": "string", "enum": ["info", "warning", "error", "critical"]},
          "title": {"type": "string"},
          "description": {"type": "string"},
          "location": {"type": "string"},
          "recommendation": {"type": "string"}
        },
        "required": ["category", "severity", "title"]
      },
      "description": "List of findings from the analysis"
    },
    "metrics": {
      "type": "object",
      "additionalProperties": true,
      "description": "Quantitative metrics from the analysis"
    },
    "recommendations": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Prioritized list of recommendations"
    },
    "changed_files": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Files examined during analysis"
    }
  },
  "required": ["summary", "findings", "changed_files"]
}
