{
    "$schema": "../llama-instance-schema.json",
    "name": "gpt-oss",
    "model": {
        "path": "models/gpt-oss-20b-Q4_K_S.gguf",
        "context_size": 4096,
        "batch_size": 512,
        "threads": 16
    },
    "server": {
        "host": "127.0.0.1",
        "port": 8001,
        "timeout": 600,
        "parallel": 4
    },
    "gpu": {
        "backend": "vulkan",
        "device_id": 1,
        "layers": 30
    },
    "env": {
        "GGML_VULKAN_DEVICE": "1"
    },
    "args": [],
    "healthcheck": {
        "path": "/health",
        "interval": 10,
        "timeout": 5,
        "retries": 3,
        "start_period": 60
    },
    "restart_policy": {
        "enabled": true,
        "max_retries": 5,
        "backoff_multiplier": 2.0,
        "initial_delay": 1.0,
        "max_delay": 300.0
    },
    "logs": {
        "stdout": "logs/gpt-oss/stdout.log",
        "stderr": "logs/gpt-oss/stderr.log",
        "max_size_mb": 100,
        "rotation": 5
    }
}
